<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %> 
  <body>
    <div class="page-container">
      <%- include('../partials/header') %>

      <main class="content">
        
        <div class="product-list">
          <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
              <div class="product-card">
                
                <form action="/products/<%= product.id %>/delete" method="POST" class="delete-form">
                  <button type="submit" class="delete-icon" aria-label="Eliminar Producto">✖</button>
                </form>
                
             
                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                
               
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
                <p><strong>Precio:</strong> $<%= product.price %></p>
                <p><strong>Categoría:</strong> <%= product.category %></p>
                
               
                <div class="product-actions">
                 
                  <a href="/products/<%= product.id %>" class="product-detail-link">Ver Detalle</a>
              
                  <a href="/products/<%= product.id %>/edit" class="edit-button-small" aria-label="Editar Producto">Editar</a>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No hay productos disponibles en este momento.</p>
          <% } %>
        </div>
      </main>

      <%- include('../partials/footer') %> 
    </div>
  </body>
</html>