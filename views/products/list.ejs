<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %> 
  <body>
    <div class="page-container">
      <%- include('../partials/header') %>

      <main class="content">
        <div class="product-list">
          <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
              <div class="product-card">
                
               
                <form action="/products/<%= product.productId %>/delete" method="POST" class="delete-form">
                  <button type="submit" class="delete-icon" aria-label="Eliminar Producto">✖</button>
                </form>
                
                
                <img 
                src="/images/products/<%= product.product_image || 'default.png' %>" 
                alt="<%= product.product_name %>" 
                class="product-image">
                
                
                <h2><%= product.product_name %></h2>
                <p><%= product.description %></p>
                <p><strong>Precio:</strong> $<%= product.price %></p>
                <p><strong>Categoría:</strong> <%= product.category ? product.category.name_category : 'Sin Categoría' %></p>
                
                
                <div class="product-actions">
                  <a href="/products/<%= product.productId %>" class="product-detail-link">Ver Detalle</a>
                  <a href="/products/<%= product.productId %>/edit" class="edit-button-small" aria-label="Editar Producto">Editar</a>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No hay productos disponibles en este momento.</p>
          <% } %>
        </div>
      </main>

      <%- include('../partials/footer') %> 
    </div>
  </body>
</html>