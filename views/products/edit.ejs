<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
  <div class="page-container">
    <%- include('../partials/header') %>
    <main class="content">
      <section class="form-container">
        <h1>Editar Producto</h1>
        <form action="/products/<%= product.productId %>/edit" method="POST">
          
       
          <div class="form-group">
            <label for="product_name">Nombre del Producto:</label>
            <input
              type="text"
              id="product_name"
              name="product_name"
              value="<%= product.product_name %>"
              required
            />
            <span class="error-message">Por favor, ingrese un nombre válido.</span>
          </div>

          
          <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea
              id="description"
              name="description"
              required
            ><%= product.description %></textarea>
            <span class="error-message">La descripción no puede estar vacía.</span>
          </div>

        
          <div class="form-group">
            <label for="price">Precio:</label>
            <input
              type="number"
              id="price"
              name="price"
              step="0.01"
              value="<%= product.price %>"
              required
            />
            <span class="error-message">Por favor, ingrese un precio válido.</span>
          </div>

          <div class="form-group">
            <label for="category_id">Categoría:</label>
            <select id="category_id" name="category_id" required>
              <% categories.forEach(category => { %>
                <option
                  value="<%= category.categoryId %>"
                  <%= product.category_id === category.categoryId ? 'selected' : '' %>
                >
                  <%= category.name_category %>
                </option>
              <% }); %>
            </select>
            <span class="error-message">Seleccione una categoría válida.</span>
          </div>

          
          <button type="submit" class="cta-buttonForm">Guardar Cambios</button>
        </form>
      </section>
    </main>
    <%- include('../partials/footer') %>
  </div>
</body>
<script src="/js/scripts.js"></script>
</html>