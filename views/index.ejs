<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vintage Circle - Home</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <!-- Header -->
  <header>
    <nav class="navbar">
      <a href="/" class="logo">Vintage Circle</a>
      <ul class="nav-links">
        <li><a href="/">Inicio</a></li>
        <li><a href="/categories">CategorÃ­as</a></li>
        <li><a href="/sell">Vender</a></li>
      </ul>
      <!-- Barra de bÃºsqueda -->
      <form action="/search" method="GET" class="search-form">
        <input type="text" name="query" placeholder="Buscar productos..." class="search-input" required>
        <button type="submit" class="search-button">Buscar</button>
      </form>
      <ul class="nav-right">
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Registro</a></li>
      </ul>
      <div class="nav-tools">
        <a href="/cart" class="cart-icon">ðŸ›’</a>
      </div>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Encuentra piezas Ãºnicas</h1>
      <p>Descubre productos vintage</p>
      <a href="/categories" class="cta-button">Explorar Productos</a>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories">
    <h2>CategorÃ­as</h2>
    <div class="category-grid">
      <a href="/categories/ropa" class="category-item">ROPA</a>
      <a href="/categories/muebles" class="category-item">MUEBLES</a>
      <a href="/categories/decoracion" class="category-item">DECORACIÃ“N</a>
      <a href="/categories/accesorios" class="category-item">ACCESORIOS</a>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="featured-products">
    <h2>Productos Destacados</h2>
    <div class="product-grid">
      <% products.forEach((product) => { %>
        <div class="product-card">
          <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
          <h2><%= product.name %></h2>
          <p><%= product.description %></p>
          <p class="product-price">$<%= product.price.toFixed(2) %></p>
          <button class="cta-button">Agregar al Carrito</button>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="social-links">
      <a href="https://www.instagram.com" target="_blank" aria-label="Instagram">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="https://www.tiktok.com" target="_blank" aria-label="TikTok">
        <i class="fab fa-tiktok"></i>
      </a>
      <a href="https://www.youtube.com" target="_blank" aria-label="YouTube">
        <i class="fab fa-youtube"></i>
      </a>
    </div>
    <p>&copy; 2025 Vintage Circle. Todos los derechos reservados.</p>
  </footer>
</body>
</html>